<div class="card">
  <div class="card-content">
    <span class="card-title">Multi-accion</span>

    <div class="row">
      {{tenpines/single-select label="Accion" opciones=accionesDisponibles elegido=accionElegida col="s12" }}
    </div>

    {{#if accionElegida.parametros}}
      <div class="row">
        {{#each accionElegida.parametros as |parametro|}}
          {{tenpines/input-text value=parametro.valor label=parametro.nombre col="s4" }}
        {{/each}}
      </div>
    {{/if}}

    {{#if mensajeDeFeedback}}
      <div class="row">
        <div class="col s12">
          <span>{{mensajeDeFeedback}}</span>
        </div>
      </div>
    {{/if}}
  </div>
  <div class="card-action left-align">
    {{tenpines/material-button label='Ejecutar Accion' action='ejecutarAccion' }}
  </div>
</div>
