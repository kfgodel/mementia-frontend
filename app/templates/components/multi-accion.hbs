<div class="card">
  <div class="card-content">
    <span class="card-title">Multi-accion</span>

    <div class="row">
      {{tenpines/single-select label="Accion" opciones=accionesDisponibles elegido=accionElegida col="s12" }}
      {{#if accionElegida}}
        {{#each accionElegida.parametros as |parametro|}}
          {{editor-de-parametro parametro=parametro }}
        {{/each}}
      {{/if}}
    </div>

    {{#if mensajeDeFeedback}}
      <div class="row">
        <div class="col s12">
          <span>{{mensajeDeFeedback}}</span>
        </div>
      </div>
    {{/if}}
  </div>
  <div class="card-action left-align">
    {{tenpines/material-button label='Ejecutar Accion' action='ejecutarAccion' disabled=noSePuedeEjecutar }}
  </div>
</div>
