<div class="card">
  <div class="card-content">
    <span class="card-title">Definir propiedad en nodo</span>
    <div class="row">
      {{tenpines/input-text value=parametros.idDeNodo label="Id de nodo" col="s4"}}
      {{tenpines/input-text value=parametros.nombreDePropiedad label="Propiedad" col="s4"}}
      {{tenpines/input-text value=parametros.valorDePropiedad label="Valor" col="s4"}}
    </div>
    {{#if mensajeDeFeedback}}
      <div class="row">
        <div class="col s12">
          <span>{{mensajeDeFeedback}}</span>
        </div>
      </div>
    {{/if}}
  </div>
  <div class="card-action left-align">
    {{tenpines/material-button label='Definir' action='definirPropiedad' }}
  </div>
</div>